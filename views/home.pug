extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting Logged in as 
            span=name 
    else 
        h1.greeting Welcome 
            span=name 
            |  to our website


append links 
    li(style="float: right;")
        a(href="/logout") Logout
    

append links
    li(style="float: right;")
        a(href="/list") Diary List

block content
    .dashboard 
        .user 
            +message(opp, name) 
            br
            br
            .container
            h2 일상의 기록 남기기
            br
            form(action='/upload', method='post', enctype='multipart/form-data')
                input(name='myImage', type='file')
                br
                br
                button.btn(type='submit') Submit
                br
                br
            form(action="/diarycontent", method='post')
                input(name='diaryContent', type='text')
                br
                br
                button.btn(type='submit') Submit
            
